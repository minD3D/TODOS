<style>
  textarea{
    resize:none;
    margin-bottom: 20px;
  }
</style>
<div class = 'container'>
  <h2>글수정하기</h2>
  <form method= "get" action = "/home/real_update/<%=@post.id%>">
    <div class="form-group">
      <label for="title">제목</label>
      <input type="text" class="form-control" value="<%=@post.title%>" id="title" name = "title" placeholder="title">
    </div>
    <div class="form-group">
      <label for="content">내용</label>
      <textarea name = 'content' id = 'content' class = 'form-control' rows="6"><%=@post.content%></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
