  <p><%= @post.content %></p>
  </div>
</div>
<div class = 'container'>
  <div class="body">
    <h2>POST TODO</h2>
    <form method= "post" action = "/home/read/<%=@post.id%>/comment_create">
        <label for="title">NAME</label>
        <input type="text" class="form-control" id="title" name = "title" placeholder="name">
        <label for="content">COMMENT</label>
        <input name = 'content' id = 'content' class = 'form-control'>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
    <% @post.comments.each do |c| %>
        <div class = 'col-md-4 todos'>
          <div class="do1">
            <h3><%=c.title%></h3>
            <h3 class="todoc"><%=c.content%></h3>
          </div>
            <a class="btn" href = '/home/read/<%= @post.id %>/comment_destroy/<%= c.id %>'>DEL</a>
        </div>
    <% end %>
</div>

